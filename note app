<body>

    <div class="container">
        <h2>üìù Notepad-kayga</h2>
        <textarea id="noteArea" placeholder="Halkan wax ku qor..."></textarea>
        
        <div class="btn-group">
            <button class="save-btn" onclick="saveNote()">Kaydi</button>
            <button class="clear-btn" onclick="clearNote()">Tirtir</button>
        </div>
        
        <div id="status"></div>
    </div>

    <script>
        // JavaScript: Shaqada Notepad-ka
        const textArea = document.getElementById('noteArea');
        const statusDiv = document.getElementById('status');

        // 1. Marka bogga la furo, soo cesho wixii horay u kaydsanaa
        window.onload = () => {
            const savedData = localStorage.getItem('myNote');
            if (savedData) {
                textArea.value = savedData;
            }
        };

        // 2. Shaqada Kaydinta (Save)
        function saveNote() {
            localStorage.setItem('myNote', textArea.value);
            showStatus("Si guul leh ayaa loo kaydiyay!", "#4CAF50");
        }

        // 3. Shaqada Tirtirista (Clear)
        function clearNote() {
            if (confirm("Ma hubtaa inaad tirtirayso qoraalka?")) {
                textArea.value = "";
                localStorage.removeItem('myNote');
                showStatus("Waa la tirtiray!", "#f44336");
            }
        }

        // Shaqo yar oo fariimaha lagu muujiyo
        function showStatus(text, color) {
            statusDiv.innerText = text;
            statusDiv.style.color = color;
            setTimeout(() => {
                statusDiv.innerText = "";
            }, 3000);
        }
    </script>

</body>
</html>
